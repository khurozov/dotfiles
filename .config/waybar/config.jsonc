    "memory": {
        "format": "ï‡¾ {used:0.2f}G/{total:0.2f}G",
        "tooltip": false
    },
    "cpu": {
        "format": "ó°› {usage}%"
    },

    "hyprland/language": {
        "format-en": "ðŸ‡ºðŸ‡¸",
        "format-ru": "ðŸ‡·ðŸ‡º",
        "on-click": "hyprctl switchxkblayout \"$(hyprctl devices -j | jq -r '.keyboards | .[] | select(.main) | .name')\" next > /dev/null"
    },
    "clock": {
        "format": "{:%d %a %H:%M}",
        "format-alt": "{:%Y %b %d %a %H:%M:%S}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "interval": 1,
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
}
