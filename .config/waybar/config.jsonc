{
    "spacing": 4,
    "margin": "4 4 0 4",
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-right": [
        "mpris",
        "network",
        "pulseaudio",
        "memory",
        "cpu",
        "hyprland/language",
        "clock", 
        "tray"
    ],

    // modules
    "hyprland/workspaces": {
        "format": " {} ",
        "persistent-workspaces": {
            "HDMI-A-2": [1,2,3,4],
            "DP-1": [5,6,7,8,9,10]
        }
    },
    "hyprland/window": {
        "separate-outputs": true,
        "icon": true,
        "rewrite": {
            "(.*) â€” Mozilla Firefox( Private Browsing)?": "$1"
        }
    },

    "mpris": {
        "interval": 5,
        "format": "{status_icon} {title} - {artist}",
        "title-len": 10,
        "artist-len": 15,
        "tooltip-format": "{title} - {artist} [{position}/{length}]",
        "status-icons": {
            "playing": "ï…„",
            "paused":  "ïŠ‹"
        }
